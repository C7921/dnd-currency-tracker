FROM node:18

WORKDIR /projects/app/dnd-currency-tracker

# Install development tools
RUN apt-get update && apt-get install -y \
    nano \
    vim \
    git \
    curl \
    && apt-get clean

# Install MongoDB client for testing
RUN apt-get install -y mongodb-clients

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the rest of the code
COPY . .

# Expose port
EXPOSE 8080 9229

# Command will be provided by docker-compose
CMD ["npm", "run", "dev"]